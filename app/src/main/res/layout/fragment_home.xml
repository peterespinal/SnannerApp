<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/home_toolbar"
    app:menu="@menu/home_toolbar_menu"
    app:title="@string/Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_daily_notification"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_lightbulb_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />
            <TextView
                android:id="@+id/daily_notification_text"
                android:text="@string/setting_card_subTittle"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <GridLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">
        <com.google.android.material.card.MaterialCardView
            android:layout_marginEnd="8dp"
            style="@style/Theme.ScannerApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/event" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            style="@style/Theme.ScannerApp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sales" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            style="@style/Theme.ScannerApp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reserve" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginStart="8dp"
            style="@style/Theme.ScannerApp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/admin" />
        </com.google.android.material.card.MaterialCardView>
    </GridLayout>


</LinearLayout>